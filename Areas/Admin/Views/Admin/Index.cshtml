                    title: "آیا از حذف این آیتم مطمئن هستید؟",
                    text: "بعد از حذف، امکان بازیابی اطلاعات وجود ندارد!",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                    buttons: ['انصراف', 'حذف']
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            $.post('/Admin/' + controller + '/' + action + '/', { id: id });
                        }

